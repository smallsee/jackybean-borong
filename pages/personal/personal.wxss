.contaner{
  display: flex;
  flex-direction: column
}

.user{
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 220rpx;
  background-color: #e8e8e8;
}

.user-image{
  margin-top: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 5rpx solid orange;
}
.user-name{
  line-height: 220rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 30rpx;
}

.login{
    margin: 40rpx auto;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 140rpx;
    height: 140rpx;
     border-radius: 50%; 
    background-color: white;
}

.login-text{
  line-height: 140rpx;
}

.main{
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 100%;
}
.consult-box{
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  border: 2rpx solid #e8e8e8;
  border-radius: 5rpx;
}
.consult-text{
  margin-left: 30rpx;
  line-height: 60rpx;
}
.consult-icon{
  width: 60rpx;
  height: 60rpx;
}