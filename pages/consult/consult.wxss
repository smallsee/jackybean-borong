page{
  box-sizing: border-box;
  padding: 0 20rpx;
}

.contanier{  
  display: flex;  
  flex-direction: column;
}  

.question{
  margin-top: 30rpx;
  width: 100%;
  height: 380rpx;
  background:#f4f4f4;
  border: 2rpx solid #dadada;
  box-sizing: border-box;
  padding: 10rpx;
}

.question-text{
  font-size: 30rpx;
}

.phone{
  padding: 10rpx 0 5rpx 5rpx;
  background:#f4f4f4;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.contanier-image{
  width: 80rpx;
  height: 80rpx;
}
.phone input{
  width: 85%;
  font-size: 26rpx;
  transform: translateY(10rpx);
}

.submit{
  margin: 40rpx auto;
  padding: 20rpx 40rpx;
  background: #ff7e00;
  border-radius: 10rpx; 
  color: white;
  box-shadow: 5rpx 5rpx 4rpx #929292;
}