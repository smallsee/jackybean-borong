.news-item{
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 160rpx;
  border-bottom:2rpx solid #e8e8e8;
}

.news-item_image{
  float: left;
  width: 120rpx;
  height: 120rpx;
    margin-right: 20rpx;
    border-radius: 50%;

}
.news-item_box{
  display: flex;
  flex-direction: row
}
.news-item_info{
  border-radius: 6rpx;
  color: white;
  font-size: 24rpx;
  background-color: #4693ff;
  height: 40rpx;
  padding: 0 6rpx;
  margin-left: 10rpx;
}
.news-item_text{
  display: block;
  font-size: 24rpx;
  color: gray;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  line-height: 40rpx;
}
.news-item_title{
    font-size: 32rpx;
    margin-bottom: 20rpx;
      color: black;
        overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
}