/*质询  */
.consultation{
   margin-top: 20rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around;
   height: 80rpx;
   font-size: 24rpx;
 }
 .consultation text{
    color: white;
 }
 .consultation image{
   width: 40rpx;
   height: 40rpx;
   margin-right: 20rpx;
 }
 .consultation-item{
   display: flex;
   flex-direction: row;
    box-sizing: border-box;
   padding: 20rpx 0 0 90rpx;
   line-height: 40rpx;
 }
  .consultation-online{
   width: 45%;
   height: 100%;
   background-color: #f7904e;

 }
 .consultation-phone{
   width: 45%;
   height: 100%;
   background-color: #1eb16f;
 }
 /*导航  */
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
  border-bottom: 2rpx solid #e8e8e8;
}  
.navbar .navbar-item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .navbar-item.active{  
  color: red;  
}  
 .navbar .navbar-item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: red;  
}   



