page{  
  display: flex;  
  flex-direction: column;
 background-color: #e8e8e8;
}  

.header{
	box-sizing: border-box;
	padding: 15rpx 10rpx 20rpx 10rpx;
  display: flex;  
  flex-direction: row;
  justify-content: space-around;
  background-color: #4993f4;
}
.person{
  width: 50rpx;
	height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid white;
  transform: translateY(5rpx);
}
.emial-image{
    width: 50rpx;
	height: 50rpx;
  transform: translateY(8rpx);
}
.person-image{
  width: 50rpx;
	height: 50rpx;
  border-radius: 50%;
}
.search {
  background-color: #f2f2f2;
  height: 60rpx;
  width: 80%;
  display: flex;
  flex-direction: row;
	border: 2rpx solid #8a8a8a;
	border-radius: 10rpx;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 400rpx;
  margin-left: 10px;
  font-size: 28rpx;
  line-height: 20rpx;
  padding: 0;
}


