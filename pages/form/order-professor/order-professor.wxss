.container{

   display: flex;
  flex-direction: column;
}

.form{
  box-sizing: border-box;
  padding: 0 20rpx;
    margin-bottom: 25rpx;
}
.section{
  margin: 40rpx 0;
  font-size: 25rpx;
}

.section__title{
 font-size: 30rpx;
  font-weight: 700;
  color: #4b556c;
}

.checkbox-container{
  margin-top: 20rpx;
   margin-bottom: 20rpx;
}
.input-box{
  margin: 20rpx 0;
 display: flex;
  flex-direction: row;
  border: 2rpx solid #4b556c;
}
.input-box textarea{

  height: 150rpx;
}
.input-box input{
  width: 100%;
  padding: 5rpx 0 10rpx 5rpx;
}
.icon{
  margin-top: 15rpx;
  margin-left: 10rpx;
}

.chexkbox-box{

     display: flex;
       flex-direction: row;
       justify-content: space-between;
  margin-top: 20rpx;
  width: 100%;

}
.checkbox-dexc{
  font-size: 24rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.7)
}

.item{
  border-top: 2rpx solid #e8e8e8;

  box-sizing: border-box;
  padding: 30rpx 20rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: black;
  width: 100%;
}

.border-bottom{
    border-bottom: 2rpx solid #e8e8e8;
}

.margin-top{
    margin-top: 30rpx;
}

.contact_view{
  box-sizing: border-box;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  align-items: center;
  background-color: #f60;
}

.submit{
  margin: 20rpx auto;
  font-size: 30rpx;
  background-color: #fd0001;
  color: white;
}



.phone-box{
  box-sizing: border-box;
  padding: 10rpx 0;
  padding-top: 20rpx;
   display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  border: 2rpx solid #868686;
  border-radius: 10rpx;
}
.phone-container{
     display: flex;
  flex-direction: row;
}
.phone-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.phone-text{
  box-sizing: border-box;
  padding-top: 5rpx;
  width: 100rpx;
  height: 40rpx;
  display: block;
  line-height: 35rpx;
}

.phone{
  margin: 20rpx auto;
  font-size: 30rpx;
   background-color: white;
   color: black;
}

.banner{
  width: 100%;
  height: 400rpx;
}
.title-box{
  display: flex;
  flex-direction: row;
  margin: 40rpx auto 10rpx;
}

.title-box image{
 width: 80rpx;
 height: 80rpx;
}
.title-box .title{
  font-size: 35rpx;
  color: #cc0000;
  line-height: 70rpx;
  margin-left: 20rpx;
  font-weight: 500;
}

.info{
  text-align: center;
  font-size: 22rpx;

}

.horzition{
  width: 80%;
  height: 4rpx;
  margin: 40rpx auto;
  background-color: #868686;
}

.ball{
  width: 20rpx;
  height: 20rpx;
  margin: -50rpx auto 40rpx;
  border-radius: 50%;
  background-color: #868686;
}

.wechar{
  box-sizing: border-box;
  padding: 0;
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  background-color: white;
  margin: 0;
  border: 0 solid white;
  position: relative;
  top: 0;
  left: 0
}

.weachar_image{
    width: 80rpx;
  height: 80rpx;
}
.border-bottom .name{
  line-height: 80rpx;
}

.small{
    padding: 10rpx 20rpx 10rpx 30rpx;
}

.bold{
  font-weight: bold
}

.kefu{
  font-size: 25rpx;
}

button::after{
  border: 0
}

.picker-box{
  padding: 10rpx;
}

