.news-item{
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 200rpx;
  border-bottom:2rpx solid #e8e8e8;
}

.news-item_image{
  float: left;
  width: 220rpx;
  height: 160rpx;
    margin-right: 20rpx;
}

.news-item_text{
  display: block;
  font-size: 24rpx;
  color: gray;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  line-height: 40rpx;
}
.news-item_title{
    font-size: 32rpx;
    margin-bottom: 20rpx;
      color: black;
        overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
}