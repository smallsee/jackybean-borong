@import "../../../untils/wxParse/wxParse.wxss";
.container{
  display: flex;
  flex-direction: column;
  padding-bottom: 80rpx;
}

.header{
  width: 100%;
  height: 300rpx;
  position: relative
}
.header-bg{
  position: absolute;
  width: 100%;
  height: 300rpx;
  z-index: -1
}
.goback{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 20rpx;
  left: 20rpx;
  z-index: 10
}
.user{
  display: flex;
  flex-direction: row;
  width: 75%;
  height: 260rpx;
  margin: 20rpx auto;
}
.user-image{
  border: 6rpx solid white;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}
.user-info-box{
  width: 325rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
}
.user-name{
  color: white;
  font-size: 50rpx;
  font-weight: bold;
}
.white-hengxian{
  width: 325rpx;
  height: 2rpx;
  background-color: white
}
.user-info{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #3d3d3d;
  display: block;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3; 
  word-break:break-all;
  line-height: 30rpx;
}
.call{
  margin-top: 10rpx;
  width: 200rpx;
  height: 50rpx;
  margin-left: -5rpx;
}

.main{
  margin-top: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #3d3d3d
}
.professor-title{
   font-size: 35rpx;
   font-weight: 600;
   color: #d30137;
   text-align: left;
 }
 
 .professor-info{
   font-size: 24rpx;
   color: black;
   text-align: left;
   margin-bottom: 10rpx;
 }
 .red-hengxian{
   width: 100%;
   height: 2rpx;
   background-color: #d50036;
   margin-top: 5rpx;
 }
 .red-hengxian_small{
   width: 43%;
   height: 2rpx;
   background-color: #d50036;
   margin-top: 6rpx;
 }

 .user-good{
   margin-bottom: 30rpx;
   font-weight: bold
 }
 .user-desc{
    margin-bottom: 30rpx;
 }

 .consultation-box{
  box-sizing: border-box;
  padding-top: 10rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;

}
.consultation{
  width: 100%;
  height: 90rpx;
    background-color: #d50036;
      text-align: center;
  line-height: 90rpx;
  color: white;
}

.professor-main-text{
  line-height: 50rpx;
}